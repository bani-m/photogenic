<div class="container-fluid">
	<div class="row header">
		<div class="col-xl-6 left_nav">
			<h1>insta9</h1>
        <form class="submit">
           <input type="text" />
           <button type="button" class="btn active disabled btn-info">
				   送信
			    </button>
        </form>
		</div>
		<div class="col-xl-6 right_nav" >
			<ul>
        <% if user_signed_in? %>
        <li><%= link_to '投稿', new_picture_path %></li>
        <li><%= link_to 'マイページ', edit_user_registration_path %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'ログイン', new_user_session_path  %></li>
        <li><%= link_to 'サインアップ', new_user_registration_path %></li>
      <% end %>
			</ul>
		</div>
	</div>
	</div>
</div>
<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2>サインアップ</h2>

    <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
      <%= f.error_messages! %>

    <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
  　</div>

  <!-- 名前入力用のフィールドを追加 -->
  　<div class="field">
     <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
     </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
  </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
      </div>

      <div class="actions">
        <%= f.submit "サインアップ", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
