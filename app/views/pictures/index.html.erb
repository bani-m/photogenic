<div class="container">
  <div class="wrapper col-lg-8 col-lg-offset-2">
    <p><%= notice %></p>
    <h1>写真一覧</h1>
          <%= link_to "写真を作成する", new_picture_path, class: 'btn btn-default' %>

<% @pictures.each do |picture| %>
  <p>タイトル:<%= picture.title %></p>
  <p>本文:<%= picture.content %></p>
  <p>写真:<%= image_tag  picture.photo_image %></p>
  <p><%= picture.user_id %></p>
  <%= link_to "写真を編集する", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
　<%= link_to '写真を削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>

<% end %>
